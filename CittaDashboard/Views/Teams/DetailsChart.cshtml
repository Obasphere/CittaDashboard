@model IEnumerable<CittaDashboard.Models.DB.Team>

@{
    /**/

    ViewBag.Title = "DetailsChart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Sidebar -->
<ul class="sidebar navbar-nav">
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("DetailsCard/1", "Teams")">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Card</span>
        </a>
    </li>

    @foreach (var t in Model)
    {
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("DetailsChart", "Teams", new { id = t.Id })">
                <i class="fas fa-fw fa-table"></i>
                <span>@t.Name</span>
            </a>
        </li>
    }

</ul>

<div id="content-wrapper">
    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Chart</li>
            <li class="breadcrumb-item active">Overview</li>
        </ol>

        <!-- Icon Cards-->
        <div class="row">

            <div class="@(@ViewBag.All_invoices == "N/A" || @ViewBag.Unpaid_invoices == "N/A" || @ViewBag.Paid_invoices == "N/A" ? "hidden" : "show")">
                <img src="@Url.Action("ChartInvoices")" alt="" id='img'/>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-wrapper -->
<script>
    var images = ['@Url.Action("ChartInvoices")','@Url.Action("ChartInvoices2")','@Url.Action("ChartInvoices3")'];
            var i = 0;
            var tagImg = document.getElementById('img');
    tagImg.onclick = function() {
                this.src = images[++i % images.length];
            }
</script>